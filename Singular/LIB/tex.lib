proc texALL(def d){
	if(typeof(d)=="ring"){
		return(texRing(d));
	}
	if(typeof(d)=="int"){
		return(texInt(d));
	}
	if(typeof(d)=="string"){
		return(texString(d));
	}
	if(typeof(d)=="poly"){
		return(texPoly(d));
	}
	if(typeof(d)=="list"){
		return(texList(d));
	}
	if(typeof(d)=="ideal"){
		return(texIdeal(d));
	}
	if(typeof(d)=="matrix"){
		return(texMatrix(d));
	}
	return("Sorry, not worked with "+string(typeof(d))+"  ,yet.")
}




proc texList(list l){
	string S;
	int i;
	S = S + "$\\left\\{";
	for(i=1;i<size(l);i++){
		S=S+texALL(l[i])[2,size(texALL(l[i]))-2]+";";
	}
	S = S+texALL(l[size(l)])[2,size(texALL(l[i]))-2]+"\\right\\}$";
return(S);
}



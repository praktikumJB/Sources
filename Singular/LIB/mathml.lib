proc mathmlPoly(poly m){
string s;
poly d=m;
int k;
int j;
s="<math xmlns=http://www.w3.org/1998/Math/MathML>";
 while (d!=0)  {
 j=1;
 k=1;
 while (j<=size(leadexp(d)) {
  if (leadexp(d)[j]>0)  {
  s=s+"<msup><mi>"+string(variables(lead(d))[k])+"</mi><mn>"+string(leadexp(d)[j]
)+"</mn></msup>";
    k=k+1;
    }  
 j=j+1;
 }
 d=d-lead(d);
 }
s=s+"</math>";
return(s);
}


